<%- include("./partials/header")  %>
<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">Todo App</a>
</nav>

<div class="container mt-5">
    <form action="/edit-todo/<%= todo._id %>" method="POST" class="d-flex">
        <input type="text" name="todo" class="form-control" placeholder="Enter Todo" value="<%= todo.todo %>">
        <input type="submit" value="Add Todo" class="btn btn-md btn-primary mx-2">
    </form>
    
    <ul class="list-group my-5">
        <h2>Pending ToDos</h2>
        <% todo.forEach(todos => { %>
        <div class="d-flex gap-10">
            <li class="d-flex justify-content-between form-control p-0.5"><%= todos.todo %> <div>
                <a href="/edit-todo/<%= todos._id %>"
                    class="btn btn-secondary btn-sm">Edit ToDo</a>
                <a href="/complete/todo/<%= todos._id %>"
                    class="btn btn-primary btn-sm">Complete ToDo</a>
                <a href="/delete/todo/<%= todos._id %>"
                    class="btn btn-danger btn-sm">Delete</a>
                    
            </div> </li>
        </div>

        <% }) %>

    </ul>
</div>





<%- include("./partials/footer")  %>